<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".singlerooms"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/singleroom"
            android:id="@+id/image2"
            >
        </ImageView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Singlerooms for rent"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Umoja Rentals"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                ></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/location"
                ></ImageButton>

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Voi"
                android:textColor="@color/black"
                ></TextView>
        </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/amount"
        ></ImageButton>

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="4000/month"
        android:textColor="@color/black"
        ></TextView>

</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spacious singles"
        android:textColor="@color/black"
        ></TextView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book"
        android:textSize="30dp"
        android:layout_gravity="center"
        ></Button>

</LinearLayout>




        </LinearLayout>




</RelativeLayout>